@implements IDisposable
@inject StateContainer StateContainer

@using devops_project_web_t4.Pages.Seat
@using devops_project_web_t4.Areas.State

<input type="date" class="form-control-sm" id="date@Id" @bind="@StateContainer.SelectedDate"/>
<!--bind maakt hier gebruik van onchange, dus bij wijziging van de datum wordt die automatisch gesaved in StateContainer.SelectedDate-->

@code
{

    [Parameter]
    public string Id { get; set; }

    protected override void OnInitialized()
    {
        StateContainer.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        StateContainer.OnChange -= StateHasChanged;
    }
}
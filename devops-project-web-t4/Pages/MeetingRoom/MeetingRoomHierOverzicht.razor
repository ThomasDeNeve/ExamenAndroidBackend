@page "/meetingrooms/hier/overzicht"

<h3>Overzicht vergaderzalen HIER</h3>

<h4>Filter:</h4>
<div>
    <label for="reservationTime">Datum &Aacute; tijd: </label>
    <input type="datetime-local" id="reservationTime" name="reservationTime">
</div>
<div id="rooms" class="shadow-lg roomPanel">
    @foreach (var room in _meetingRooms)
    {
        <div class="shadow coworkroom" @onclick="() => ShowRoom(room.Id)">
            <p>@room.Name</p>
            <div><img src="Images/meetingrooms/@room.ImageName" width="200" height="200" /></div> <br />
        </div>
    }
</div>
@using devops_project_web_t4.Shared.Components
@using devops_project_web_t4.Data.Repositories
@using devops_project_web_t4.Areas.Controllers
@inject AuthenticationStateProvider AuthState
@page "/coworking/reserveer/seatReservationForm/{Id:int}"

<div id="reservationform">

    <h3>Reservation voor stoel @Id </h3>
    
    @if (LoggedIn())
    {
        @if (HasSub())
        {
            <p>Gelieve de reservatie te bevestigen aub.</p>
        }
        else
        {
            <p>U kunt kiezen uit onderstaande abonnementen:</p>
            <input type="radio" id="HIER.af en toe" name="options" value="HIER.af en toe" @onchange="RadioSelection" checked=@(SubName.Equals("HIER.af en toe", StringComparison.OrdinalIgnoreCase))/>
            <label for="HIER.af en toe">HIER. af en toe - €70 - 5d per maand</label>
            <br/>
            <input type="radio" id="HIER.halftijds" name="options" value="HIER.halftijds" @onchange="RadioSelection" checked=@(SubName.Equals("HIER.halftijds", StringComparison.OrdinalIgnoreCase))/>
            <label for="HIER.halftijds">HIER. halftijds - €120 - 10d per maand</label>
            <br/>
            <input type="radio" id="HIER.voltijds" name="options" value="HIER.voltijds" @onchange="RadioSelection" checked=@(SubName.Equals("HIER.voltijds", StringComparison.OrdinalIgnoreCase))/>
            <label for="HIER.voltijds">HIER. voltijds* - €225 - 24/7 per maand</label>
            <br/>
            <input type="radio" id="HIER.mijn vaste plek beneden" name="options" value="HIER.mijn vaste plek beneden" @onchange="RadioSelection" checked=@(SubName.Equals("HIER.mijn vaste plek beneden", StringComparison.OrdinalIgnoreCase))/>
            <label for="HIER.mijn vaste plek beneden">HIER. mijn vaste plek beneden - €295 - per maand</label>
            <br/>
            <input type="radio" id="HIER.mijn vaste plek boven" name="options" value="HIER.mijn vaste plek boven" @onchange="RadioSelection" checked=@(SubName.Equals("HIER.mijn vaste plek boven", StringComparison.OrdinalIgnoreCase))/>
            <label for="HIER.mijn vaste plek boven">HIER. mijn vaste plek boven - €320 - per maand</label>
            <br/>
            <input type="radio" id="HIER.voor een jaar" name="options" value="HIER.voor een jaar" @onchange="RadioSelection" checked=@(SubName.Equals("HIER.voor een jaar", StringComparison.OrdinalIgnoreCase))/>
            <label for="HIER.voor een jaar">HIER. voor een jaar - €195 - 10d per jaar</label>
            <br/>
        }

        <button @onclick="Confirm" class="hierButton primaryHierButton">Bevestigen</button>
        <button @onclick="Cancel" class="hierButton secondaryHierButton">Annuleren</button>
    }
    else
    {
        <p>Gelieve eerst in te loggen aub.</p>
    }

</div>